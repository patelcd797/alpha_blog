<div id="page-content">
    <h1 class="text-center">Article listing page</h1>
    <div class="container">
        <% @articles.each do |article| %>
            <div class="row justify-content-md-center">
                <div class="col-8 mt-4">
                    <div class="card text-center shadow mb-5 bg-white rounded">
                        <div class="card-header font-italic">
                           by <%= article.user.name if article.user %>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
                            <p class="card-text"><%= truncate(article.description, length: 200) %></p>
                            <div class="d-flex justify-content-center ">
                                <%= button_to "View", article_path(article), class: "btn btn-outline-success ml-4", method: :get %>
                                <%= button_to "Edit", edit_article_path(article), class: "btn btn-outline-info ml-4", method: :get %>
                                <%= button_to "Delete", article_path(article), data: {confirm: "are you sure?"}, class: "btn btn-outline-danger ml-4", method: :delete %>
                            </div>
                        </div>
                        <div class="card-footer text-muted">
                            <small> 
                                create <%= time_ago_in_words(article.created_at)%> ago, 
                                edited  <%= time_ago_in_words(article.updated_at)%>ago
                            </small>
                        </div>
                    </div>
                </div>
            </div>        
        <% end%>
    </div>
</div>